#!/usr/bin/env ruby
$: << File.expand_path("#{File.dirname __FILE__}/../lib")
require 'rubygems'
require 'lambchop'
require 'optparse'

Version = Lambchop::VERSION

options = {}

ARGV.options do |opt|
  opt.on('-d', '--detach') { options[:detach] = true }
  opt.parse!
end

open(ARGV[0]) do |f|
  Lambchop::Client.start(f.read, f.path, options)
end
